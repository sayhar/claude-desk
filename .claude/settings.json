{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python $CLAUDE_PROJECT_DIR/hooks/no-heredoc.py"
          },
          {
            "type": "command",
            "command": "uv run python $CLAUDE_PROJECT_DIR/hooks/no-compound-bash.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python $CLAUDE_PROJECT_DIR/hooks/no-new-md-files.py"
          },
          {
            "type": "command",
            "command": "uv run python $CLAUDE_PROJECT_DIR/hooks/no-auto-memory.py"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python $CLAUDE_PROJECT_DIR/hooks/no-auto-memory.py"
          }
        ]
      }
    ]
  }
}
